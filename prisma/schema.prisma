generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id        String    @id @default(cuid())
  clerkId   String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  attempts  Attempt[]
  images    Image[]
}

model Image {
  id             String       @id @default(cuid())
  mode           Mode
  isPublic       Boolean      @default(false)
  storageKey     String
  originalKey    String?
  width          Int
  height         Int
  format         String
  bytes          Int
  checksum       String       @unique
  createdById    String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  source         ImageSource
  answerAttempts Attempt[]    @relation("AnswerImage")
  attempts       Attempt[]    @relation("StimulusImage")
  createdBy      UserProfile? @relation(fields: [createdById], references: [id])

  @@index([mode, isPublic])
}

model Attempt {
  id            String      @id @default(cuid())
  userId        String
  mode          Mode
  imageId       String
  timerSeconds  Int
  status        String
  storyText     String?
  ocrText       String?
  ocrProvider   String?
  ocrConfidence Float?
  feedbackJson  Json?
  score         Int?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  answerImageId String?
  answerImage   Image?      @relation("AnswerImage", fields: [answerImageId], references: [id])
  image         Image       @relation("StimulusImage", fields: [imageId], references: [id])
  user          UserProfile @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([mode, createdAt])
}

enum Mode {
  PPDT
  TAT
}

enum ImageSource {
  seed
  user
  ai
}
